<ChatContainer @channel={{this.model}} as |messages chatApi|>

  <ChannelHeader @title={{this.model.name}} @description={{this.model.description}} />
  <div class="py-4 flex-1 overflow-y-scroll channel-messages-list" role="list">
    {{#each messages as |message|}}
    <Message
      @message={{message}}
      @deleteMessage={{fn chatApi.deleteMessage message.id}}
    />
    {{/each}}
  </div>
  <ChannelFooter  @submitMessage={{chatApi.createMessage}} />
</ChatContainer>
